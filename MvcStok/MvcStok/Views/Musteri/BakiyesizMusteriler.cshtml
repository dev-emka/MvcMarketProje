@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblMusteriler>
@{
    ViewBag.Title = "BakiyesizMusteriler";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<h1>Bakiyesiz Musteriler</h1>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Bakiye</th>
        
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.ad</td>
                <td>@item.soyad</td>
                <td>@item.sehir</td>
                <td>@item.bakiye ₺</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa=> Url.Action("BakiyesizMusteriler", new {sayfa}))

